<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700"
    tools:context=".activity.ForgetPassword">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/loadingpage"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_gravity="center_horizontal"/>

    <TextView android:textColor="@color/changeColor"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Password Reset Link"
        style="@style/txtTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="16.0dip" android:hint="Email or phone number" style="@style/etOutLine">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailaddress" android:padding="12.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textCapWords" style="@style/txtBody" />
    </com.google.android.material.textfield.TextInputLayout>



    <FrameLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="32.0dip">
        <com.google.android.material.button.MaterialButton
            android:layout_width="fill_parent" android:layout_height="56.0dip"
            android:text="Send Password Reset Link"
            android:id="@+id/getpassword"
            android:textAllCaps="false" android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip" app:cornerRadius="8.0dip" style="@style/whiteButton" />
    </FrameLayout>

    <TextView
        android:textColor="@color/changeColor"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="30.0dip"
        android:id="@+id/messgeshow"
        android:text="You will be sent a password reset link if a user with matching details is found in the system."
        style="@style/txtTitle" />

</androidx.appcompat.widget.LinearLayoutCompat>