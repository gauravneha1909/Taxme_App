<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:background="@color/purple_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:alpha="0.7"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Work Hours" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="6"
            android:layout_height="36.0dip"
            android:orientation="horizontal"
            android:weightSum="12">

            <RelativeLayout
                android:id="@+id/linFrequency11111"
                android:layout_width="0dp"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:background="@drawable/bg_et_login_black"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hour_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingStart="8.0dip"
                    android:paddingEnd="4.0dip"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/linFrequency"
                android:layout_width="0dp"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="7"
                android:background="@drawable/bg_et_login_black"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/datename"
                    style="@style/txtSubTitleThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="days"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    />

            </RelativeLayout>

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>