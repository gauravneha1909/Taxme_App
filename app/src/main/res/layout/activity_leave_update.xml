<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:id="@+id/bottomMenu"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:elevation="2.0dip"
            app:contentInsetStart="0.0dip"
            android:background="@color/changeColor"
            app:contentInsetStartWithNavigation="0.0dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backarrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/appnameaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14.0dip"
                    android:weightSum="10"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/txtBody"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:alpha="0.7"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:text="Employer Name" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="36.0dip"
                        android:orientation="horizontal"
                        android:weightSum="12">

                        <RelativeLayout
                            android:id="@+id/linselectemployeename"
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_height="30.0dip"
                            android:layout_gravity="center"
                            android:layout_weight="7"
                            android:background="@drawable/bg_et_login_black"
                            android:padding="8.0dip">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/employeenametext"
                                style="@style/txtSubTitleThree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
                                app:tint="@android:color/darker_gray" />
                        </RelativeLayout>

                    </LinearLayout>





                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/selectemployeedate"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="Select Employment Name" />



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/txtBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14.0dip"
                            android:alpha="0.7"
                            android:text="Start Date" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/startdateline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginTop="8.0dip"
                            android:background="@drawable/bg_et"
                            android:padding="8.0dip">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_calendar"
                                app:tint="@android:color/darker_gray" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtstartdate"
                                style="@style/txtSubTitleThree"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16.0dip"
                                android:text="" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/txtBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14.0dip"
                            android:alpha="0.7"
                            android:text="End Date" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/employeenddateline"
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.0dip"
                            android:background="@drawable/bg_et"
                            android:padding="8.0dip">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_calendar"
                                app:tint="@android:color/darker_gray" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtendDate"
                                style="@style/txtSubTitleThree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16.0dip"
                                android:text="" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/leave_dates_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:reverseLayout="false"
                    android:paddingBottom="5dp"
                    android:id="@+id/featureproduct"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:id="@+id/lineworkhour"
                    android:visibility="gone"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/saveworkhour"
                            style="@style/whiteButtonlogingive"
                            android:layout_width="fill_parent"
                            android:layout_height="56.0dip"
                            android:layout_marginStart="3.0dip"
                            android:layout_marginEnd="3.0dip"
                            android:text="Save Leave"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_14sdp"
                            app:cornerRadius="8.0dip" />
                    </FrameLayout>

                </LinearLayout>




            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
