<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/bottomMenu"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:elevation="2.0dip"
            android:background="@color/changeColor"
            app:contentInsetStart="0.0dip"
            app:contentInsetStartWithNavigation="0.0dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backarrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/appnameaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Add Adhoc Income"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            >






            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.0dip"
                android:weightSum="10"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtBody"
                    android:layout_width="0dp"
                    android:layout_height="36.0dip"
                    android:gravity="center_vertical"
                    android:alpha="0.7"
                    android:layout_weight="5"
                    android:textColor="@color/changeColor"
                    android:text="Income Source" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/income_source"
                    style="@style/txtSubTitleTwo"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="36.0dip"
                    android:background="@drawable/bg_et_login_black"
                    android:hint=""
                    android:layout_gravity="end"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/etHint" />

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.0dip"
                android:weightSum="10"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtBody"
                    android:layout_width="0dp"
                    android:layout_height="36.0dip"
                    android:gravity="center_vertical"
                    android:alpha="0.7"
                    android:layout_weight="5"
                    android:textColor="@color/changeColor"
                    android:text="Income Amount (inc. Taxes)" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/income_amount"
                    style="@style/txtSubTitleTwo"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="36.0dip"
                    android:background="@drawable/bg_et_login_black"
                    android:hint=""
                    android:layout_gravity="end"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/etHint" />

            </androidx.appcompat.widget.LinearLayoutCompat>




            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.0dip"
                android:weightSum="10"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtBody"
                    android:layout_width="0dp"
                    android:layout_height="36.0dip"
                    android:gravity="center_vertical"
                    android:alpha="0.7"
                    android:layout_weight="5"
                    android:textColor="@color/changeColor"
                    android:text="Tax Deducted at Source?" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/taxdeductedsource"
                    style="@style/txtSubTitleTwo"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="36.0dip"
                    android:background="@drawable/bg_et_login_black"
                    android:hint=""
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:layout_gravity="end"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/etHint" />

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.0dip"
                android:weightSum="10"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtBody"
                    android:layout_width="0dp"
                    android:layout_height="36.0dip"
                    android:gravity="center_vertical"
                    android:alpha="0.7"
                    android:layout_weight="5"
                    android:textColor="@color/changeColor"
                    android:text="Tax Deduction Amount" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tax_reduce"
                    style="@style/txtSubTitleTwo"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="36.0dip"
                    android:background="@drawable/bg_et_login_black"
                    android:hint=""
                    android:layout_gravity="end"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/etHint" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginTop="24.0dip"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtBody"
                    android:layout_width="0dp"
                    android:layout_height="36.0dip"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:alpha="0.7"
                    android:textColor="@color/changeColor"
                    android:text="Adhoc Income Date" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/firstpaymentdateline"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="36.0dip"
                    android:background="@drawable/bg_et"
                    android:padding="8.0dip">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_calendar"
                        app:tint="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtpaymentdatefirst"
                        style="@style/txtSubTitleThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16.0dip"
                        android:text="" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="24.0dip"
                android:weightSum="10"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtBody"
                    android:layout_width="0dp"
                    android:layout_height="36.0dip"
                    android:gravity="center_vertical"
                    android:alpha="0.7"
                    android:layout_weight="5"
                    android:textColor="@color/changeColor"
                    android:text="Upload Income Proof" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lineimage"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/imgEditProfile"
                            style="@style/whiteButtonlogingive"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3.0dip"
                            android:layout_marginEnd="3.0dip"
                            android:text="Upload"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_14sdp"
                            app:cornerRadius="8.0dip" />




                    <ImageView
                        android:id="@+id/imgProfile"
                        android:visibility="gone"
                        android:layout_width="96.0dip"
                        android:layout_height="96.0dip"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_image_24" />


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/txtBody"
                        android:layout_width="wrap_content"
                        android:layout_height="36.0dip"
                        android:gravity="center_vertical"
                        android:alpha="0.7"
                        android:id="@+id/pdfname"
                        android:layout_weight="5"
                        android:text="" />



                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submit"
                        style="@style/whiteButtonlogingive"
                        android:layout_width="fill_parent"
                        android:layout_height="56.0dip"
                        android:layout_marginStart="3.0dip"
                        android:layout_marginEnd="3.0dip"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp"
                        app:cornerRadius="8.0dip" />
                </FrameLayout>

            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
