<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700"
    tools:context=".activity.ChooseLoginPage">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/loadingpage"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_22sdp"
                android:visibility="gone"
                android:layout_marginTop="30.0dip"
                android:text="@string/app_name"
                style="@style/txtTitlecolorchange" />

            <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="32.0dip">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signup"
                    android:textColor="@color/purple_700"
                    android:layout_width="fill_parent" android:layout_height="56.0dip" android:text="Sign up" android:textAllCaps="false" android:layout_marginStart="16.0dip" android:layout_marginEnd="16.0dip" app:cornerRadius="8.0dip" style="@style/whiteButton" />
            </FrameLayout>
            <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="32.0dip">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="fill_parent" android:layout_height="56.0dip"
                    android:text="Log In"
                    android:id="@+id/login"
                    android:textAllCaps="false"
                    android:layout_marginStart="16.0dip"
                    android:textColor="@color/purple_700"
                    android:layout_marginEnd="16.0dip" app:cornerRadius="8.0dip" style="@style/whiteButton" />
            </FrameLayout>

            <TextView android:textColor="@color/changeColor"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="30.0dip" android:text="Or"
                style="@style/txtTitle" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="10"
                    android:layout_height="wrap_content" android:layout_marginTop="32.0dip">
                    <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        android:visibility="visible"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackground"
                        android:id="@+id/googleauth"
                        android:layout_width="match_parent" android:layout_height="56.0dip"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:layout_marginBottom="@dimen/_1sdp" app:cardCornerRadius="@dimen/_3sdp" app:cardElevation="@dimen/_2sdp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_gravity="center" android:orientation="horizontal" android:padding="@dimen/_5sdp" android:layout_width="wrap_content" android:layout_height="56.0dip">
                            <ImageView android:layout_gravity="center"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/googlelogo"/>
                            <TextView android:textColor="@android:color/black"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="Google"
                                android:textAllCaps="false"
                                style="@style/txtTitle" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="5"
                    android:visibility="gone"
                    android:layout_height="wrap_content" android:layout_marginTop="32.0dip">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/facebookauth"
                        app:cardUseCompatPadding="true"
                        android:visibility="visible"
                        android:layout_width="match_parent" android:layout_height="56.0dip" android:layout_margin="@dimen/_2sdp" android:layout_marginBottom="@dimen/_1sdp" app:cardCornerRadius="@dimen/_3sdp" app:cardElevation="@dimen/_2sdp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_gravity="center" android:orientation="horizontal" android:padding="@dimen/_5sdp" android:layout_width="wrap_content" android:layout_height="56.0dip">
                            <ImageView android:layout_gravity="center"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_facebook_login"/>
                            <TextView android:textColor="@android:color/black"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="FaceBook"
                                android:textAllCaps="false"
                                style="@style/txtTitle" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>


                </FrameLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>